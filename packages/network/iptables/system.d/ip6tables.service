[Unit]
Description=IP6TABLES Packet Filtering
ConditionPathExists=/storage/.config/iptables/rules.v6
Before=network.target
Wants=network.target

[Service]
Type=oneshot
ExecStart=/usr/sbin/ip6tables-restore /storage/.config/iptables/rules.v6
ExecReload=/usr/sbin/ip6tables-restore /storage/.config/iptables/rules.v6
ExecStop=/usr/sbin/iptables-flush
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
